<div class="row">
    <div class="banner1 col s11">
        <h1>Electronic music festivals</h1>
    </div>
</div>
<div class="row">
    <div class="input-field col s10 offset-s1">
        <div class="row">
            <div class="col s1">
                <i class="material-icons prefix">search</i>
            </div>
            <div class="col s11">
                <input type="search" class="validate">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12">
        <div class="search-results"></div>
    </div>
</div>
<div class="festivalContainer">
    <div class="row">
        <div class="col s12">
            <div class="collection">
                {% for n in festivals %}
                    <a href="{{ path('festival', {'name': n.uname}) }}" class="collection-item black-text">{{ n.name }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <ul class="pagination">
                {% if(activePage == 1) %}
                    <li class="disabled">
                        <a href="#!">
                            <i class="material-icons">chevron_left</i>
                        </a>
                    </li>
                {% else %}
                    <li class="waves-effect">
                        <a class="pag3Link" href="{{ activePage-1 }}"><i class="material-icons">chevron_left</i>
                        </a>
                    </li>
                {% endif %}
                {% for n in 1..nbPagPage %}
                    {% if(n == activePage) %}
                        <li class="active">
                            <a href="#!">{{ n }}</a>
                        </li>
                    {% else %}
                        <li class="waves-effect">
                            <a class="pag3Link" class="black-text" href="{{ n }}">{{ n }}</a>
                        </li>
                    {% endif %}
                {%  endfor %}
                {% if(activePage == nbPagPage) %}
                    <li class="disabled">
                        <a href="#!">
                            <i class="material-icons">chevron_right</i>
                        </a>
                    </li>
                {% else %}
                    <li class="waves-effect">
                        <a class="pag3Link" href="{{ activePage+1 }}">
                            <i class="material-icons">chevron_right</i>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>